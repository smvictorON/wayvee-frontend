{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.png", "src/context/UserContext.js"],
  "exclude": ["node_modules"]
}